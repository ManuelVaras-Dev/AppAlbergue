<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722"/> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="16dp"/> <!-- Esquinas redondeadas, si deseas -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Color de fondo normal -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
