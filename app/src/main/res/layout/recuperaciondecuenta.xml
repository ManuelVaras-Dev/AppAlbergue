<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/recovery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Cuenta"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="48dp"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/recovery_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce tu correo electrónico para recibir el enlace de recuperación."
        android:textSize="16sp"
        android:textColor="#574E4E"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Imagen o Logo -->
    <ImageView
        android:id="@+id/recovery_logo"
        android:layout_width="189dp"
        android:layout_height="110dp"
        android:src="@drawable/perrosolo"
        android:layout_marginTop="16dp"/>

    <!-- Campo de correo electrónico -->
    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Botón para enviar el enlace de recuperación -->
    <Button
        android:id="@+id/btnSendRecoveryLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F85F6A"
        android:padding="12dp"
        android:text="Enviar Enlace"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Botón para volver al inicio de sesión -->
    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Volver al inicio de sesión"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
