<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".MainActivity">

    <!-- Mensaje de confirmación -->

    <!-- Icono de éxito -->

    <!-- Mensaje adicional para seguimiento -->

    <!-- Botón para hacer seguimiento al rescate -->

    <TextView
        android:id="@+id/tv_rescate_exitoso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="#558ED5"
        android:gravity="center"
        android:padding="16dp"
        android:text="¡Rescate Registrado!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_rescate_exitoso"
        android:layout_width="166dp"
        android:layout_height="92dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Icono de éxito"
        android:src="@drawable/botonexito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rescate_exitoso" />


    <TextView
        android:id="@+id/tv_mensaje_seguimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Puedes hacer seguimiento a este rescate en cualquier momento."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_rescate_exitoso" />

    <Button
        android:id="@+id/btn_seguimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#558ED5"
        android:text="Ver Seguimiento"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mensaje_seguimiento" />

    <!-- Botón para volver al inicio -->
    <Button
        android:id="@+id/btn_volver_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#558ED5"
        android:text="Volver al Inicio"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_seguimiento" />

</androidx.constraintlayout.widget.ConstraintLayout>
