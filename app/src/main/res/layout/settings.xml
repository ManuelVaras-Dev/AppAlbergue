<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_cuenta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:gravity="center_horizontal|center_vertical"
        android:text="Ajustes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Cuenta"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="#E2DBDB"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Editar Perfil"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:drawableLeft="@drawable/baseline_circle_notifications_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Notificaciones"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/baseline_security_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Seguridad"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:drawableLeft="@drawable/baseline_privacy_tip_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Privacidad"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="Soporte "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="#DCD6D6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textVSoporte"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/baseline_contact_support_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Ayuda y Soporte"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVTerminos"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/baseline_error_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Terminos y Condiciones"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Acciones"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="#DCD7D7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textVReport"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/baseline_flag_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Reportar un Problema"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/baseline_west_24"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Cerrar Sesion"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>